---
// Update the import path if necessary, or create the file if missing
import MiLayout from "../../layouts/MiLayout.astro";
//API = htpps://jsonplaceholder.typicode.com/users

interface User {
    id: number;
    name: string;
    email: string;
}

const response = await fetch("https://jsonplaceholder.typicode.com/users");
const users: User[] = await response.json();
---

<MiLayout title="Usuarios">
    <h3>Listado de usuarios</h3>
    <ul>
        {
            users.map((user) => (
                <li>
                    <a href={`/users/${user.id}`}>{user.name} - {user.email}</a>
                </li>
            ))
        }
    </ul>
</MiLayout>
